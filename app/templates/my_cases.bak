<!DOCTYPE html>
<html lang="en">
<head>
  <title>My Cases</title>
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/homepage.css') }}"  />
  <!-- <link rel="stylesheet" href="homepage.css"  /> -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter&family=Poppins:wght@400;700&display=swap" rel="stylesheet"> 
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='fonts/fontawesome-free-6.4.2-web/css/all.min.css') }}" />
</head>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
    body {
        font-family: arial, sans-serif;
    }
    .movebody {
        margin-left: 120px;
        padding: 0px 10px;
        margin-top: 50px;
    }
    .purplebutton{
        margin: 10px;
        background-color: #662484;
        border: none;
        color: white;
        text-align: center;
        cursor: pointer;
        padding: 5px 10px;
        font-size: 16px;
        border-radius: 4px;
    }
    .purplebutton:hover{
        color: #f3e419;
    }
    form label {
        font-weight: 500;
        letter-spacing: 3px;
    }
</style>
<body>
    <div class="container">
        <!-- Navigation Menu -->
        <nav>
        <div class="nav-menu">
            <div class="nav-title">
            <a href="./home-page"><img src="{{ url_for('static', filename='images/ccgrouplogo.png') }}" width="250"></a>
            </div>
            <ul>
            <li><a href="./home-page">
                <i class="fa-solid fa-chart-simple"></i>
                <span class="page">Home Page</span>
            </a>
            </li>
            <li><a href="./users">
                <i class="fa-solid fa-user"></i>
                <span class="page">Users</span>
            </a>
            <li><a href="./manage-users">
                <i class="fa-solid fa-user-gear"></i>
                <span class="page">Manage Users</span>
            </a>
            </li>
            <li><a href="./upload-new-requests">
                <i class="fa-solid fa-upload"></i>
                <span class="page">Upload New Cases</span>
            </a>
            </li>
            <li><a href="./new-requests">
                <i class="fa-solid fa-clipboard-list"></i>
                <span class="page">Assign Cases</span>
            </a>
            </li>        
            </li>
            <li><a href="./">
                <i class="fas fa-sign-out-alt"></i>
                <span class="page">Logout</span>
            </a>
            </li>
            </ul>
        </div>
        </nav>
        
        <section class="main">
            <!-- Title -->
            <div class="main-top">
                <h1>ChildCare Enrollment Management System</h1>
            </div>
            
            <!-- Content -->
            <div class="movebody">
                <h2>My Cases</h2>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                    {% request_id, form in forms %}
                    <tr>
                        <td>{{ form.customer_id }}</td>
                        <td>{{ form.first_name }}</td>
                        <td>{{ form.last_name }}</td>
                        <td>
                            <a href="#popupForm" class="purplebutton">Edit</a>
                        </td>
                    </tr>
                    <!-- Popup form -->
                    <div class="overlay" id="popupForm">
                        <div class="wrapper">
                            <h2>Edit Case Information</h2>
                            <h3>Case Number: {{ request_id }}</h3>
                            <!-- Button to close popup -->
                            <a class="close" href="#">&times;</a>

                            <!-- Actual popup form -->
                            <div class="content">
                                <div class="popupContent">
                                    <form>
                                            <label>Customer ID: </label>
                                            <br>
                                            <input placeholder="{{ form.customer_id }}" type="text">
                                        <br>
                                            <label>First Name: </label>
                                            <br>
                                            <input placeholder="{{ form.first_name() }}" type="text">
                                        <br>
                                            <label>Last Name: </label>
                                            <br>
                                            <input placeholder="{{ form.last_name() }}" type="text">
                                        <br>
                                            <label>Number Of Children: </label>
                                            <br>
                                            <input placeholder="{{ form.num_of_children() }}" type="text">
                                        <br>
                                            <label>Number Of Children Enrolled: </label>
                                            <br>
                                            <input placeholder="{{ form.num_children_enrolled() }}" type="text">
                                        <br>
                                            <label>Outreach Date: </label>
                                            <br>
                                            <input type="text" placeholder="{% if form.outreach_date() %}{{ form.outreach_date() }}{% else %}yyyy-mm-dd{% endif %}">
                                        <br>
                                            <label>Package Return Date: </label>
                                            <br>
                                            <input type="text" placeholder="{% if form.packet_received_date() %}{{ form.packet_received_date }}{% else %}yyyy-mm-dd{% endif %}">
                                        <br>
                                            <label>Packet Return Status: </label>
                                            <br>
                                            <select placeholder="{{ form.packet_return_status() }}">
                                                <option value="Returned">Returned</option>
                                                <option value="Not Returned">Not Returned</option>
                                                <option value="Waiting For Response">Waiting For Respons</option>
                                            </select>
                                        <br>
                                            <label>Decision Date: </label>
                                            <br>
                                            <input type="text" placeholder="{% if form.packet_decision_date() %}{{ form.decision_date() }}{% else %}yyyy-mm-dd{% endif %}">
                                        <br>
                                            <label>Not Enrolled Reason: </label>
                                            <br>
                                            <select placeholder="{{ form.not_enrolled_reason() }}">
                                                <option value="Does not meet employment/activity requirement">Does not meet employment/activity requirement</option>
                                                <option value="Fee too high">Fee too high</option>
                                                <option value="No Child Care Slots">No Child Care Slots</option>
                                                <option value="No longer in Dallas County">No longer in Dallas County</option>
                                                <option value="No Child Care Slots">No Child Care Slots</option>
                                                <option value="Fee too high">Fee too high</option>
                                                <option value="No Child Care Slots">No Child Care Slots</option>
                                                <option value="No Longer Needing Services">No Longer Needing Services</option>
                                                <option value="No Packet Received">No Packet Received</option>
                                                <option value="No Provider Choice">No Provider Choice</option>
                                                <option value="Not a Priority">Not a Priority</option>
                                                <option value="Not working/training">Not working/training</option>
                                                <option value="On leave/STD">On leave/STD</option>
                                                <option value="Over the income guidelines">Over the income guidelines</option>
                                                <option value="Unable to Reach Client">Unable to Reach Client</option>
                                                <option value="Under participation requirement">Under participation requirement</option>
                                                <option value="Verification Docs Needed">Verification Docs Needed</option>
                                                <option value="other">Other</option>
                                            </select>
                                        <input class="purplebutton" type="submit" value="Save">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %} 
                </table>
            </div>
        </section>
    </div>

    
</body>
</html>